<aura:component>

    <lightning:layoutItem padding="around-small" size="12 " mediumDeviceSize="6">
        <div class="slds-box slds-theme_default">
            <h2 class="slds-text-heading_medium title">Input equation parameters</h2>
            <fieldset>
                <form class="slds-form_stacked">
                    <lightning:input type="text" 
                                     label="Quadratic coefficient" 
                                     placeholder="a" 
                                     required="true" />
                    <lightning:input type="text" 
                                     label="Linear coefficient" 
                                     placeholder="b" 
                                     required="true" />
                    <lightning:input type="text" 
                                     label="Constant" 
                                     placeholder="c"
                                     required="true" />
                    <lightning:button label="Solve" 
                                      class="slds-m-top_medium" 
                                      variant="brand" 
                                       />
                </form>
            </fieldset>
        </div>
    </lightning:layoutItem>
</aura:component>